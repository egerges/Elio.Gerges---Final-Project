<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Muzzk</title>

    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="./css/style.css">
    <link rel="stylesheet" href="./css/responsive.css">

    <script src="./js/api.js"></script>
    <script src="./js/common.js"></script>
    <script src="./js/songs.js"></script>
    <script src="./js/footer.js"></script>
</head>
<body class="w3-white">

    {{!-- Sidenav template start --}}
    {{>sidenav}}
    {{!-- Sidenav template end --}}

    <div id="main">
        {{!-- Header template start --}}
        {{>header}}
        {{!-- Header template end --}}

        <!-- Music Content -->
        <div class="w3-row-padding" id="songs-holder"></div>

        {{!-- Player template start --}}
        {{>player}}
        {{!-- Player template end --}}
    
        <!-- Footer -->
        <footer class="w3-content w3-text-black">
          <h2 class="w3-text-dark-grey">Contact Us</h2>
          <hr style="width:200px" class="w3-opacity">

          <div class="w3-section">
            <p><i class="fa fa-map-marker fa-fw w3-text-dark-grey w3-xxlarge w3-margin-right"></i> Toronto, CA</p>
            <p><i class="fa fa-phone fa-fw w3-text-dark-grey w3-xxlarge w3-margin-right"></i> Phone: 1 - 800 - 4MUZZK</p>
            <p><i class="fa fa-envelope fa-fw w3-text-dark-grey w3-xxlarge w3-margin-right"> </i> Email: support@muzzk.com</p>
          </div>

          <i class="fa fa-facebook-official w3-hover-opacity  w3-xlarge" id="anchorFacebook"></i>
          <i class="fa fa-instagram w3-hover-opacity  w3-xlarge" id="anchorInstagram"></i>
          <i class="fa fa-twitter w3-hover-opacity  w3-xlarge" id="anchorTwitter"></i>
          <i class="fa fa-linkedin w3-hover-opacity  w3-xlarge" id="anchorLinkedIn"></i>
        <!-- End footer -->
        </footer>
    </div>
    
</body>
</html>